{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++11",
            "type": "shell",
            "command": "g++",
            "args": ["-g", "-Wall", "--std=c++11", 
            "-O1", "-o", "${file}.out", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}